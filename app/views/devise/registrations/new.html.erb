<main class="container p-5">
  <div class="form-card b-round p-5">
    <h4>Digite seu nome e sobrenome:</h4>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name,
                    required: true,
                    autofocus: true,
                    label: "Nome",
                    input_html: { autocomplete: "first name" }%>
        <%= f.input :last_name,
                    required: true,
                    autofocus: true,
                    label: "Sobrenome",
                    input_html: { autocomplete: "last name" }%>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: false,
                    input_html: { autocomplete: "email", value: Faker::Internet.email, class: "d-none" }%>
        <%= f.input :password,
                    required: true,
                    label: false,
                    # hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", value: "secret", class: "d-none" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    label: false,
                    input_html: { autocomplete: "new-password", value: "secret", class: "d-none" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Entrar", class: "btn btn-outline-dark w-100" %>
      </div>
    <% end %>

    <%# <%= render "devise/shared/links" %>
  </div>

</main>
