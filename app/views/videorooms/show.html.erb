<main>
  <div class="container videoroom">
    <h1><%= @videoroom.name %></h1>

    <div class="messages">
      <% @videoroom.messages.each do |message| %>
        <div id="message-<%= message.id %>">
          <small>
            <strong><%= message.user.full_name %></strong>
            <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
          </small>
          <p><%= message.content %></p>
        </div>
      <% end %>
    </div>
  </div>
</main>
